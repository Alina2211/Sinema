@model List<Sinema.ViewModels.FilmViewModel>;

<div class="center-div">
    <h2>Фильмы в прокате</h2>


    <div>
        @foreach (var film in Model)
        {
            <a asp-controller="Film" asp-action="FilmPage" asp-route-id="@film.FilmId"><h4>@film.FilmName</h4></a>
            <img src=@film.Poster height="250px">
        }
    </div>
</div>

